node {
    try {
        stage('Build') {
            echo 'Compilation du projet...'
            sh 'mvn clean package'
        }

        stage('Test') {
            echo 'Exécution des tests...'
            sh 'mvn test'
        }

        stage('Deploy') {
            if (env.BRANCH_NAME == 'main') {
                echo 'Déploiement en production...'
                sh './deploy.sh'
            }
        }
    } catch (err) {
        currentBuild.result = 'FAILURE'
        throw err
    } finally {
        echo "Fin du pipeline : ${currentBuild.result}"
    }
}
